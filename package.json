{
  "name": "@iryu54/minesweeper",
  "version": "0.1.0",
  "main": "server/bin/www",
  "bin": {
    "mineSweeper": "./server/bin/www"
  },
  "scripts": {
    "serve": "NODE_ENV=dev concurrently --kill-others \"vue-cli-service serve\" \"nodemon server/bin/www\"",
    "build": "vue-cli-service build --production",
    "start": "npm run build",
    "lint": "vue-cli-service lint",
    "commit": "git cz"
  },
  "dependencies": {
    "@dicebear/avatars": "^3.0.6",
    "@dicebear/avatars-identicon-sprites": "^2.0.6",
    "@fortawesome/fontawesome-free": "^5.8.2",
    "cookie-parser": "~1.4.3",
    "core-js": "^2.6.5",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dragscroll": "0.0.8",
    "express": "~4.16.0",
    "fast-sort": "^1.5.6",
    "fs-extra": "^8.0.1",
    "morgan": "~1.9.0",
    "opn": "^6.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "uws": "^100.0.1",
    "vue": "^2.6.10",
    "vue-dragscroll": "^1.8.3",
    "vue-router": "^3.0.3",
    "vue-socket.io": "^2.1.1-b",
    "ws": "^7.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@vue/cli-plugin-babel": "^3.7.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-service": "^3.7.0",
    "babel-eslint": "^10.0.1",
    "bluebird": "^3.5.4",
    "commitizen": "^3.1.1",
    "concurrently": "^4.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "husky": "^2.3.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.21"
  },
  "files": [
    "server",
    "server/public",
    "package.json",
    "package-lock.json"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
