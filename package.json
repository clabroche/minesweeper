{
  "name": "@iryu54/minesweeper",
  "version": "0.1.5",
  "main": "server/bin/www",
  "bin": {
    "mineSweeper": "./server/bin/www"
  },
  "scripts": {
    "serve": "stack-monitor ./stack.js",
    "server": "cd server && nodemon bin/www",
    "client": "vue-cli-service serve",
    "build": "vue-cli-service build --production",
    "start": "npm run build",
    "lint": "vue-cli-service lint",
    "commit": "git cz"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.2",
    "axios": "^0.21.0",
    "dragscroll": "0.0.8",
    "vue": "^2.6.10",
    "vue-dragscroll": "^1.8.3",
    "vue-long-click": "0.0.4",
    "vue-router": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@iryu54/stack-monitor": "^1.6.1",
    "@vue/cli-plugin-babel": "^3.7.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-service": "^3.7.0",
    "babel-eslint": "^10.0.1",
    "bluebird": "^3.5.4",
    "commitizen": "^3.1.1",
    "concurrently": "^4.1.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "husky": "^2.3.0",
    "node-sass": "^4.9.0",
    "nodemon": "^2.0.6",
    "sass-loader": "^7.1.0",
    "vue-template-compiler": "^2.5.21"
  },
  "files": [
    "server",
    "server/public",
    "package.json",
    "package-lock.json"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
